{% extends 'base.html.twig' %}

{% block title %}
	{{'comment'|trans}}
{% endblock %}

{% block body %}
	<h1>{{'comment'|trans}}</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ comment.id }}</td>
			</tr>
			<tr>
				<th>{{'text'|trans}}</th>
				<td>{{ comment.text }}</td>
			</tr>
			<tr>
				<th>{{'user.user'|trans}}</th>
				<td>{{ comment.getUserId().username }}</td>
			</tr>
			<tr>
				<th>{{'trick'|trans}}</th>
				<td>{{ comment.getTrickId().name }}</td>
			</tr>
			<tr>
				<th>{{ 'created.the'|trans }}</th>
				<td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>{{ 'modified.the'|trans }}</th>
				<td>{{ comment.modifiedAt ? comment.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_comment_index') }}">{{ 'back.to.list'|trans }}</a>

	<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">{{ 'actions.edit'|trans }}</a>

	{{ include('comment/_delete_form.html.twig') }}
{% endblock %}
