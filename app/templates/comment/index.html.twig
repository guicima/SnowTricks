{% extends 'base.html.twig' %}

{% block title %}Comment index
{% endblock %}

{% block body %}
	<h1>Comment index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>{{ 'text'|trans }}</th>
				<th>{{ 'created.the'|trans }}</th>
				<th>{{ 'modified.the'|trans }}</th>
				<th>{{ 'actions.actions'|trans }}</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.text }}</td>
					<td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ comment.modifiedAt ? comment.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_comment_show', {'id': comment.id}) }}">{{'actions.show'|trans }}</a>
						<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">{{'actions.edit'|trans }}</a>
						{{ include('comment/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_comment_new') }}">Create new</a>
{% endblock %}
